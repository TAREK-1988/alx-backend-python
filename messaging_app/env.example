# Copy this file to .env and replace all placeholder values.
# .env MUST NOT be committed to Git.

# --------------------------------------------------
# Core Django settings
# --------------------------------------------------
DEBUG=True
SECRET_KEY=your_django_secret_key_here
ALLOWED_HOSTS=127.0.0.1,localhost
CORS_ALLOW_ALL=True

# --------------------------------------------------
# Database selection
# If USE_DOCKER_DB=1, the project will use MySQL settings below.
# If USE_DOCKER_DB=0 or unset, it will use the default SQLite database.
# --------------------------------------------------
USE_DOCKER_DB=0

# --------------------------------------------------
# MySQL database settings (used when USE_DOCKER_DB=1)
# These are also used by docker-compose.
# --------------------------------------------------
MYSQL_DB=messaging_db
MYSQL_USER=messaging_user
MYSQL_PASSWORD=messaging_password
MYSQL_ROOT_PASSWORD=super_secret_root_password
MYSQL_HOST=db
MYSQL_PORT=3306

#!/usr/bin/env bash
set -euo pipefail

echo "Checking for minikube..."
if ! command -v minikube >/dev/null 2>&1; then
  echo "minikube is not installed. Please install minikube first." >&2
  exit 1
fi

echo "Starting minikube if not running..."
if ! minikube status >/dev/null 2>&1; then
  minikube start
fi

echo "Cluster info:"
kubectl cluster-info

echo "Listing pods in all namespaces:"
kubectl get pods --all-namespaces
